<Window x:Class="Vinarstvi.window.RecordDisplayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Vinarstvi.window"
        mc:Ignorable="d"
        Title="Record Display" Height="400" Width="800"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- First row for table name and record count -->
            <RowDefinition Height="*"/>    <!-- Second row for DataGrid -->
        </Grid.RowDefinitions>

        <!-- Table Name and Record Count StackPanel -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,10">
            <TextBlock Text="Table Name: " FontWeight="Bold"/>
            <TextBlock Text="{Binding TableName}" Margin="0,0,10,0" FontWeight="Bold"/>
            <TextBlock Text="Number of Records: "/>
            <TextBlock Text="{Binding RecordCount}"/>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid Grid.Row="1" x:Name="dataGrid" AutoGenerateColumns="True" VerticalAlignment="Center"/>
    </Grid>
</Window>